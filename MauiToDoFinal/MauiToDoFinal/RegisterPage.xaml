<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiToDoFinal.RegisterPage"
             Title="Kayıt Ol">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Kayıt Ol" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="UsernameEntry" Placeholder="Kullanıcı Adı" />
        <Entry x:Name="PasswordEntry" Placeholder="Şifre" IsPassword="True" />

        <Button Text="Kayıt Ol" Clicked="OnRegisterClicked" />

        <Label x:Name="MessageLabel" TextColor="Red" FontAttributes="Italic"/>
    </VerticalStackLayout>

</ContentPage>
