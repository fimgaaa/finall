<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiToDoFinal.DetailPage"
             Title="Görev Detayı">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Başlık:" FontAttributes="Bold"/>
            <Label x:Name="TitleLabel" />

            <Label Text="Kategori:" FontAttributes="Bold"/>
            <Label x:Name="CategoryLabel" />

            <Label Text="Durum:" FontAttributes="Bold"/>
            <Label x:Name="StatusLabel" />

            <Label Text="Oluşturulma:" FontAttributes="Bold"/>
            <Label x:Name="CreatedAtLabel" />

            <Label Text="Oluşturan:" FontAttributes="Bold"/>
            <Label x:Name="CreatedByLabel" />

            <Label Text="Güncellendi:" FontAttributes="Bold"/>
            <Label x:Name="UpdatedAtLabel" />

            <Label Text="Güncelleyen:" FontAttributes="Bold"/>
            <Label x:Name="UpdatedByLabel" />

            <Label Text="Bitiş Tarihi:" FontAttributes="Bold"/>
            <Label x:Name="DueDateLabel" />


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
